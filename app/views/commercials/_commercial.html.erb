<tr>
	<td class "commerical">
		<p class="transcript"><%= commercial.transcript %></p>
		<span class="timestamp">
			Posted <%= time_ago_in_words(commercial.created_at) %> ago.
		</span>
		<% if current_user == commercial.user %>	
			<%= link_to "Edit", edit_commercial_path(commercial) %>
			<%= link_to "Delete", commercial, :method => :delete, :confirm => "Are you sure?" %>
		<% end %>
		<% if !(current_user.business_user?) %>
			<%= link_to "Post a video!", new_post_path(:commercial_id => commercial.id) %>
		<% end %>
		<br /><br />
		<% if @show %>
			<%= render @posts %>
		<% end %>		
	</td>
</tr>
