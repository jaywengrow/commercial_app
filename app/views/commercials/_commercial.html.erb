<tr>
	<td class="commerical center">
		<% if @show %>
			<%= link_to "View by most recent", commercial_path(commercial, :view => "recent", :class => "left_link") %><span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
			<%= link_to "View by highest voted", commercial_path(commercial, :view => "popular", :class => "right_link") %><br />
		<% end %>
		<h5 class="commercial_title"><%= "#{commercial.title}" %></h5>
		<h6>Contest details:</h6>
		<p class="transcript"><%= commercial.transcript %></p>
		<span class="timestamp">
			Posted <%= time_ago_in_words(commercial.created_at) %> ago.
		</span>
		<% if current_user == commercial.user %>	
			<%= link_to "Edit", edit_commercial_path(commercial) %>
			<%= link_to "Delete", commercial, :method => :delete, :confirm => "Are you sure?" %>
		<% end %>
		<% if signed_in? && !(current_user.business_user?) %>
			<%= link_to "Post a video!", new_post_path(:commercial_id => commercial.id) %>
		<% end %>
		<br />
		<% if @show %>
			<%= render @posts %>
		<% else %>
			<%= link_to "See all users' posts for this commercial! (#{commercial.posts.count} posts)", commercial_path(commercial) %>
		<% end %>		
			<br /><br />
	</td>
</tr>
