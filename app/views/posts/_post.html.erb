<span>From #<%= "#{post.user.name}" %>:</span>
<span>Title: <%= "#{post.title}" %>:</span>
<div><%= sanitize post.embed_text, :tags => %w(embed object param) %></div>
<% if signed_in? %>	
	<%= link_to "Thumbs up!", vote_path(:value => 1, :post => post.id), :class => "thumbs_up_button" %>
	<%= link_to "Thumbs down!", vote_path(:value => -1, :post => post.id), :class => "thumbs_down_button" %>
	<% @vote = Vote.find_by_user_id_and_post_id(current_user.id, post.id) %>
	<% if @vote %>
		<p>You voted <%= "#{@vote.value}" %> </p>
	<% else %>
		<p> You have not yet voted! </p>
	<% end %>
<% end %>
<% if current_user == post.user %>	
	<%= link_to "Edit", edit_post_path(post) %>
	<%= link_to "Delete", post, :method => :delete, :confirm => "Are you sure?" %>
<% end %>
<br /><br />
